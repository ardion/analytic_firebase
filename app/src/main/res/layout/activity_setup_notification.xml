<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupNotificationActivity"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <Button
        android:id="@+id/btn_get_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="get token"/>

    <Button
        android:id="@+id/btn_subscribe_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="subscribe topic"/>

    <Button
        android:id="@+id/btn_unsubscribe_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="unsubscribe topic"/>

</LinearLayout>